<% content_for :title, t('.title') %>
<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                <strong><%= t('.title') %></strong>
            </h2>
            <hr>
        </div>
        <% posts.each do |post| %>
          <div class="col-lg-12 text-center">
            <h2><%= post.title %>
                <br>
                <small><%= post.created_at.strftime("%B %d, %H:%M, %Y") %></small>
            </h2>
            <%= truncate_parse_md post.content  %>
            <%= link_to t('.read_more'), post_path(post), class: 'btn btn-default' %>
            <hr>
          </div>
        <% end %>
        <% if posts.empty? %>
          <div class="text-center">
            <%= t('.empty') %>
          </div>
        <% end %>

        <div class="text-center">
          <%= paginate posts %>
        </div>
    </div>
</div>
