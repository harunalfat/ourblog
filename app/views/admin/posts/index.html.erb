<% content_for :title, t('.header') %>

<div class="col-md-10">
	<div class="content-box-large">
		<div class="panel-heading">
		<div class="panel-title"><%= t('.post_list') %></div>
	</div>
		<div class="panel-body">
			<div class="table-responsive">
				<%= link_to  t('.new'), new_admin_post_path, class: 'btn btn-primary' %>
				<table class="table">
              <thead>
                <tr>
                  <th>#</th>
                  <th><%= t('.created_date') %></th>
                  <th><%= t('.title') %></th>
                  <th><%= t('.last_updater') %></th>
									<th><%= t('.updated_date') %>
                </tr>
              </thead>
              <tbody>
								<% posts.each_with_index do |post, index| %>
									<tr>
										<td><%= index %></td>
										<td><%= post.created_at %></td>
										<td><%= post.title %></td>
										<td><%= post.updater.username %></td>
										<td><%= post.updated_at %></td>
										<td><%= link_to t('.edit'), edit_admin_post_path(post),
																								class: 'btn btn-success'%></td>
									</tr>
								<% end %>
              </tbody>
            </table>
			</div>
		</div>
	</div>
</div>
