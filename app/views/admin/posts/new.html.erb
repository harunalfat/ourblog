<%= content_for :title, t('.header') %>

<div class="col-md-10">
	<div class="content-box-large">
		<div class="panel-heading">
          <div class="panel-title"><%= t('.header') %></div>
      </div>
		<div class="panel-body">
      <%= form_tag(admin_posts_path, method: 'POST', class: 'form-horizontal') do %>
  			<div class="form-group">
  		    <label for="inputEmail3" class="col-sm-2 control-label"><%= t('.title') %></label>
  		    <div class="col-sm-10">
  		      <input type="text" class="form-control" name="title" placeholder="<%= t('.title') %>" value="<%= post.title %>">
  		    </div>
  		  </div>
  		  <div class="form-group">
  		    <label class="col-sm-2 control-label"><%= t('.content') %></label>
  		    <div class="col-sm-10">
  		      <textarea id="post-content" name="content" class="form-control" placeholder="<%= t('.content') %>" rows="3"><%= post.content %></textarea>
  		    </div>
  		  </div>
  		  <div class="form-group">
  		    <div class="col-sm-offset-2 col-sm-10">
  		      <button type="submit" class="btn btn-primary"><%= t('.add') %></button>
  		    </div>
  		  </div>
		<% end %>
		</div>
	</div>
</div>
